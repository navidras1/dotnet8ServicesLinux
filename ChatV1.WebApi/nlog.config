<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      >

	<extensions>
		<add assembly="NLog.Web.AspNetCore" />
		<add assembly="CustomNLog" />

	</extensions>

	<targets>




		<target name="coloredConsole" xsi:type="ColoredConsole" useDefaultRowHighlightingRules="false"
        layout="${longdate}|${pad:padding=5:inner=${level:uppercase=true}}|${message}" >
			<highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
			<highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
			<highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
			<highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
			<highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
		</target>
		<target name="microService" type="RabbitMq">

			<contextproperty name="SystemName" layout="ChatTest" />
			<contextproperty name="EventDateTime" layout="${date}" />
			<contextproperty name="EventLevel" layout="${level}" />
			<contextproperty name="ClientIp" layout="${aspnet-request-ip}" />
			<contextproperty name="MachineName" layout="${machinename}" />
			<contextproperty name="EventMessage" layout="${message}" />
			<contextproperty name="ErrorSource" layout="${callsite:className=false:fileName=true:includeSourcePath=false:methodName=false:cleanNamesOfAnonymousDelegates=false}" />
			<contextproperty name="ErrorClass" layout="${callsite:className=true:fileName=false:includeSourcePath=false:methodName=false:cleanNamesOfAnonymousDelegates=false}" />
			<contextproperty name="ErrorMethod" layout="${callsite:className=false:fileName=false:includeSourcePath=true:methodName=true:cleanNamesOfAnonymousDelegates=false}" />
			<contextproperty name="Exception" layout="${exception:format=message}" />
			<contextproperty name="StackTrace" layout="${onexception: ${exception:format=ToString}}" />
			<contextproperty name="PkEmployee" layout="${aspnet-item:pkemployee}" />
			<contextproperty name="ControllerParam" layout="${aspnet-item:param}" />
			<contextproperty name="UserName" layout="${aspnet-item:userName}"/>
			<contextproperty name="Response" layout="${aspnet-item:response}"/>

		</target>

	</targets>

	<rules>
		<logger name="*" minlevel="Info" writeTo="coloredConsole" />
		<logger name="*" minlevel="Info" appendTo="microService"  />
	</rules>
</nlog>
